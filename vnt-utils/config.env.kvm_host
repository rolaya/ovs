# KVM CentOS host configuration

#--------------------------------------------------------------------------------------
# KVM_HOST_HYPERVISOR: The hypervisor of the KVM host. In the production environment
# it is VMWare ESXi. In development environments, it is KVM itself running on a 
# baremetal host (e.g. personal laptop).
unset KVM_HOST_HYPERVISOR
#: ${KVM_HOST_HYPERVISOR:="kvm"}
: ${KVM_HOST_HYPERVISOR:="esxi"}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_HOST_NAME: The name of the KVM VNT VM.
unset KVM_HOST_NAME
: ${KVM_HOST_NAME:=kvm-vnt-host}
#: ${KVM_HOST_NAME:=kvm_test1}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_HOST_RAM: The RAM (GB) of the KVM VNT VM.
unset KVM_HOST_RAM
: ${KVM_HOST_RAM:=2048}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_HOST_SIZE: The size (GB) of the KVM VNT VM.
unset KVM_HOST_SIZE
: ${KVM_HOST_SIZE:=30}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_LIBVIRT_IMAGES_PATH: KVM images path (defaults to "/var/lib/libvirt/images/")
unset KVM_LIBVIRT_IMAGES_PATH
: ${KVM_LIBVIRT_IMAGES_PATH:="/home/$USER/kvm/libvirt/images"}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_INSTALL_OPTION_GRAPHICS: KVM images path (defaults to "/var/lib/libvirt/images/")
unset KVM_INSTALL_OPTION_GRAPHICS
: ${KVM_INSTALL_OPTION_GRAPHICS:="none"}
#: ${KVM_INSTALL_OPTION_GRAPHICS:="vnc,listen=0.0.0.0 --noautoconsole"}
#--------------------------------------------------------------------------------------






